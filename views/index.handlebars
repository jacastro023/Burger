<div class="jumbotron jumbotron-fluid backimg">
  <div class="container">
    <h1>Burgers!</h1>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col">
      <h2>Burgers that are ready to eat!</h2>

      <ul>
        {{#each burgers}}
        {{#unless eaten}}
        {{> burgers/burger-block eaten=true}}
        {{/unless}}
        {{/each}}
      </ul>
    </div>
    <div class="col">

      <h2>Burgers eaten!</h2>

      <ul>
        {{#each burgers}}
        {{#if eaten}}
        {{> burgers/burger-block eaten=false}}
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>

  <div style="text-align: center;">
    <h2>Order another Burger</h2>
    <form class="create-form">

      <div class="form-group">
        <label for="ca">Burger Name:</label>
        <input type="text" id="ca" name="name">
      </div>

      <button type="submit">Add Burger</button>
    </form>
  </div>